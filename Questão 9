#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
main (){
	setlocale(LC_ALL, "");
	float n1, n2, n3, media;
	
	printf ("Insira suas notas: ");
	scanf ("%f%f%f", &n1,&n2,&n3);

    media = ((n1 * 2) + (n2 * 3) + (n3 * 5))/ 10;
    
    system ("cls");
    
    printf ("Sua média final é %.1f", media);
	
}
